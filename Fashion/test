import torch
import numpy as np


shape=(3,5,)
randtensor = torch.rand(shape)
onestensor = torch.ones(shape)
zerostensor = torch.zeros(shape)

print(f"randtensor: {randtensor}")
print(f"onestensor: {onestensor}")
print(f"zerostensor: {zerostensor}\n")
print(f"device tensor is stored on: {onestensor.device}")
# We move our tensor to the current accelerator if available
if torch.accelerator.is_available():
    onestensor = onestensor.to(torch.accelerator.current_accelerator())

print(f"shape : {onestensor.shape}")
print(f"datatype : {onestensor.dtype}")
print(f"device tensor is stored on: {onestensor.device}")

print(f"First row : {onestensor[0]}\n")
print(f"First column : {onestensor[:, 0]}\n")
print(f"Last column : {onestensor[:, -1]}\n")
onestensor[:, 1] = 0
print(f"First row of onestensor after setting second column to 0: {onestensor[0]}\n")
print(onestensor)

